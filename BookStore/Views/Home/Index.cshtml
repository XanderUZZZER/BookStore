@{
    Layout = null;
}

<!DOCTYPE html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Book store</title>
</head>
<body>
    <div>
        <h3>Book sale</h3>
        <table border="1">
            <tr>
                <td><p>Book title</p></td>
                <td><p>Author</p></td>
                <td><p>Price</p></td>
            </tr>
            @foreach (var b in ViewBag.Books)
            {
                <tr>
                    <td><p>@b.Name</p></td>
                    <td><p>@b.Author</p></td>
                    <td><p>@b.Price</p></td>
                    <td><p><a href="/Home/Buy/@b.Id">Buy</a></p></td>
                </tr>
            }
        </table>
    </div>
</body>